# ===========================================
# SkillBridge Environment Configuration
# ===========================================
# Copy this file to .env and update values

# Environment: development | staging | production
NODE_ENV=development

# ===========================================
# Server Configuration
# ===========================================
PORT=5000
HOST=0.0.0.0

# ===========================================
# Database Configuration
# ===========================================
# MongoDB connection string (required)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/skillbridge?retryWrites=true&w=majority

# Connection pool settings (optional)
MONGODB_POOL_SIZE=10
MONGODB_TIMEOUT=5000
MONGODB_SOCKET_TIMEOUT=45000

# ===========================================
# Authentication (JWT)
# ===========================================
# Secret key for signing tokens (required - change in production!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Token expiration (default: 7d)
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# ===========================================
# Rate Limiting
# ===========================================
# Window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Max requests per window (default: 100)
RATE_LIMIT_MAX=100

# ===========================================
# Pagination
# ===========================================
# Default page size (default: 20)
PAGINATION_DEFAULT_LIMIT=20

# Maximum page size (default: 100)
PAGINATION_MAX_LIMIT=100

# ===========================================
# CORS Configuration
# ===========================================
# Allowed origins (default: * for development)
# For production, set to your frontend URL: https://yourapp.com
CORS_ORIGIN=*

# Allow credentials (default: false)
CORS_CREDENTIALS=false

# ===========================================
# Logging
# ===========================================
# Log level: error | warn | info | debug (default: info)
LOG_LEVEL=info

# ===========================================
# Scheduler
# ===========================================
# Enable/disable scheduled tasks (default: true)
SCHEDULER_ENABLED=true

# Cron expression for inactivity check (default: Mondays 9 AM UTC)
INACTIVITY_CHECK_CRON=0 9 * * 1
